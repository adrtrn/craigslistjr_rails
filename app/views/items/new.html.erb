<h3> Sell an Item </h3>
<%= form_for([@category, @category.items.build]) do |f| %>
<p> 
  
  <%= f.label :title %>
  <%= f.text_field :title , size: 45 %>
</p>

  <%= f.label :price %>
  <%= f.text_field :price, size: 10 %>

  <%= f.label :email %>
  <%= f.text_field :email %>
<p>
    <%= f.submit %>
  </p>  
  <% end %>
